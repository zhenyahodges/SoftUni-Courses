<section>
    <h1>New Accomodation</h1>
    {{#if error}}
    {{#each error.messages}}
    <p class="error">{{this}}</p>
    {{/each}}

    {{/if}}
    <form action="/create" method="post">
        <label for="name">Name
            <input type="text" name="name">
        </label>
        <label for="description">Description
            <textarea {{#if error.fields.description}}class="field-error" {{/if}} type="text" name="description"></textarea>
        </label>
        <label for="city">City
            <input {{#if error.fields.city}}class="field-error" {{/if}} type="text" name="city">
        </label>
        <label for="beds">Beds
            <input {{#if error.fields.beds}}class="field-error" {{/if}} type="text" name="beds">
        </label>
        <label for="price">Price
            <input {{#if error.fields.price}}class="field-error" {{/if}} type="text" name="price">
        </label>
        <label for="imageUrl">ImageUrl:<input {{#if error.fields.imageUrl}}class="field-error" {{/if}} name="imageUrl"></label>
        <button>Submit</button>
    </form>
</section>