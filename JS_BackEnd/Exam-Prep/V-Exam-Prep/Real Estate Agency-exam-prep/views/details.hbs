<main>
    <section id="details-page">
        <div class="wrapper">
        {{#with house}}
            <div class="product-img">
                <img src="{{imageUrl}}" />
            </div>
            <div class="product-info">
                <div class="product-text">
                    <div class="product-text">
                        <h1>Name: {{name}}</h1>
                        <h2>Type: {{type}}</h2>
                        <h4>Year: {{year}}</h4>
                        <h4>City: {{city}}</h4>
                        <p>
                            Description: {{description}}
                        </p>
                        {{#if user}}
                        {{#if rented}}
                        {{/if}}
                        {{/if}}

                        <!-- if there are already tenants of the housing, separate their names with a comma and a space ", "  -->
                        <p>
                            People rented this housing: Alex Petkov, Ivan Dobrev
                        </p>

                        <!-- If not display: -->
                        <p>
                            People rented this housing: There are no tenants
                            yet.
                        </p>
                    </div>
                </div>

                {{#if user}}
                <!-- if there is no registered user, do not display buttons-->
                <div class="product-btn">

                    {{#if owner}}
                    <!-- Only for registered user and creator of the housing offer-->
                    <a href="/house/{{_id}}/edit" class="edit">Edit</a>
                    <a href="/house/{{_id}}/delete" class="remove">Delete</a>

                    {{else}}

                    <!-- logged in user with available pieces-->
                    <a href="/house/{{_id}}/rent" class="rentHome">Rent a home, available {{free}} housing</a>
                    <p class="alRentHome">You have already rent this home</p>
                    <!-- logged in user with no available pieces-->
                    <p class="no-housing">No Housing Available!</p>
                    
                    {{/if}}
                    {{/if}}


                </div>
            </div>
        {{/with}}
        </div>
    </section>
</main>