<section>
    {{#with room}}
    <h1>{{name}} - Details</h1>
    <main>
        <p>City: {{city}}</p>
        <p>{{description}}</p>
        <p>Beds: {{beds}}</p>
        <p>Price per night: Â£{{price}}</p>
        {{#if isOwner}}
            <a href="/facility/{{_id}}/decorateRoom">Edit Facilities</a>
            <a href="/room/{{_id}}/edit">Edit Accomodation</a>
            <a href="/room/{{_id}}/delete">Delete</a>
        {{/if}}
        <div class="img-cont">
            <img src="{{imageUrl}}">
        </div>
       <ul>
        {{#each facilities}}
        <li>{{label}} <img class="icon" src="{{iconUrl}}"></li>
        {{/each}}
       </ul>
        
    </main>
    {{/with}}
</section>